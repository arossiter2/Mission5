<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        /* General body styling */
        body {
            font-family: Arial, sans-serif; /* Sets the font */
            margin: 0; /* Removes default margin */
            padding: 0; /* Removes default padding */
            background-color: #f4f4f4; /* Light gray background color */
            text-align: center; /* Centers the text */
        }

        /* Container for the page content */
        .container {
            display: flex;
            flex-direction: column; /* Ensures h1 is above main */
            align-items: center; /* Centers content horizontally */
        }

        /* Header styling */
        header {
            background-color: #333; /* Dark background color */
            color: white; /* White text color */
            padding: 20px; /* Padding inside header */
        }

        /* Navigation list styling */
        nav ul {
            list-style: none; /* Removes bullet points from the list */
            padding: 0; /* Removes padding */
        }

            /* Styling for navigation items */
            nav ul li {
                display: inline; /* Makes the list items display inline (horizontally) */
                margin: 0 15px; /* Adds margin between list items */
            }

                /* Link styling in the navigation bar */
                nav ul li a {
                    color: white; /* White text for links */
                    text-decoration: none; /* Removes underline from links */
                }

        /* Styling for the main heading */
        h1 {
            text-align: center; /* Centers the heading text */
            margin-top: 20px; /* Adds space above the heading */
        }

        /* Main content area styling */
        main {
            display: flex;
            flex-direction: row; /* Keeps sections side by side */
            justify-content: center; /* Centers the content horizontally */
            gap: 20px; /* Adds space between sections */
            padding: 20px; /* Adds padding around main content */
        }

        /* Styling for each section inside the main content */
        section {
            background: white; /* White background for each section */
            padding: 20px; /* Adds padding inside each section */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Adds a subtle shadow */
            max-width: 400px; /* Limits the maximum width of the section */
            text-align: center; /* Centers the text inside the section */
            max-height: 600px; /* Limits the height of the section */
        }

        /* Styling for images */
        img {
            width: 100%; /* Ensures images take up the full width of the container */
            border-radius: 10px; /* Rounds the corners of the image */
        }

        /* Footer styling */
        footer {
            margin-top: 20px; /* Adds space above the footer */
            background-color: #333; /* Dark background color for footer */
            color: white; /* White text color */
            padding: 10px; /* Adds padding inside the footer */
        }
    </style>

    <!-- Meta tags for character set and viewport configuration -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Page title displayed in browser tab, dynamically set with ViewData -->
    <title>@ViewData["Title"] - Mission 5</title>

    <!-- Linking external CSS files for styling -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mission5.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- Header section containing the navbar -->
    <header>
        <!-- Navbar for site navigation -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Navbar brand, includes logo and home link -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/piano3.png" alt="Logo" height="40">
                </a>

                <!-- Navbar toggler for mobile view -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar menu that collapses on smaller screens -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Calculator link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Calculator</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <!-- Main content section where body content is rendered -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- This is where the main content will be inserted by RenderBody() -->
            @RenderBody()
        </main>
    </div>

    <!-- Footer section -->
    <footer class="border-top footer text-muted">
        <div class="container">
            <!-- Footer text, showing the copyright notice -->
            &copy; 2025 - Ainsley Rossiter Mission 5
        </div>
    </footer>

    <!-- Link to JavaScript libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Rendering optional script sections if any -->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
